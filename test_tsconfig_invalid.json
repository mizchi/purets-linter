{
  "compilerOptions": {
    "strict": false,
    "noUnusedParameters": false,
    "allowImportTsExtension": false,
    "verbatimModuleSyntax": false,
    "module": "commonjs",
    "target": "ES5",
    "allowUnreachableCode": true,
    "allowUnusedLabels": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}